console.log (num === numstg);

08.
const nome = "Pedro";
const idade = 19;
const altura = 1.79;
const infos = true;

console.log (typeof nome, nome);
console.log (typeof idade, idade);
console.log (typeof altura, altura);
console.log (typeof infos, infos);

09.
const celsius = 29;
const fahrenheit = (celsius * 9/5) + 32;

console.log (`${celsius} °C equivalem a ${fahrenheit} °F`);

10. 
const nota1 = 10;
const nota2 = 4;
const nota3 = 6;

const media = (nota1 + nota2 + nota3) / 3;

if (media >= 7) {
  console.log(`Aluno aprovado, media: ${media}`);
} else {
  console.log(`Aluno reprovado, média: ${media}`);
}
